            <div class="nav-link">
                <i class="bi bi-person-circle nav-icon"></i>
                @if (!IsCollapsed)
                {
                    <span class="nav-text">Profile</span>
                }
            </div>
        </NavLink>

        <!-- Logout -->
        <NavLink href="/logout" class="nav-item logout-item" Match="NavLinkMatch.Prefix">
            <div class="nav-link">
                <i class="bi bi-box-arrow-right nav-icon text-danger"></i>
                @if (!IsCollapsed)
