<footer class="footer">
    <div class="footer-content">
        <div class="footer-left">
            <!-- Copyright Info -->
            <div class="copyright">
                <span>&copy; @CurrentYear Blazor CRUD Demo. All rights reserved.</span>
            </div>

            <!-- Version Info -->
            <div class="version-info">
                <span class="version-label">Version:</span>
                <span class="version-number">v1.0.0</span>
                <span class="build-info">(Build @BuildDate)</span>
            </div>
        </div>

        <div class="footer-center">
            <!-- Status Indicators -->
            <div class="status-indicators">
                <div class="status-item @(GetDatabaseStatusClass())">
                    <i class="bi @(GetDatabaseStatusIcon()) status-icon"></i>
                    <span class="status-text">Database</span>
                    <span class="status-badge @GetDatabaseStatusClass()">@GetDatabaseStatusText()</span>
                </div>
                <div class="status-item @(GetApiStatusClass())">
                    <i class="bi @(GetApiStatusIcon()) status-icon"></i>
                    <span class="status-text">API</span>
                    <span class="status-badge @GetApiStatusClass()">@GetApiStatusText()</span>
                </div>
                <div class="status-item @(GetCacheStatusClass())">
                    <i class="bi @(GetCacheStatusIcon()) status-icon"></i>
                    <span class="status-text">Cache</span>
                    <span class="status-badge @GetCacheStatusClass()">@GetCacheStatusText()</span>
                </div>
            </div>
        </div>

        <div class="footer-right">
            <!-- Quick Links -->
            <div class="quick-links">
                <a href="/help" class="quick-link">
                    <i class="bi bi-question-circle me-1"></i>
                    Help
                </a>
                <a href="/settings" class="quick-link">
                    <i class="bi bi-gear me-1"></i>
                    Settings
                </a>
                <a href="/about" class="quick-link">
                    <i class="bi bi-info-circle me-1"></i>
                    About
                </a>
            </div>

            <!-- Social Links -->
            <div class="social-links">
                <a href="https://github.com" class="social-link" title="GitHub" target="_blank" rel="noopener noreferrer">
                    <i class="bi bi-github"></i>
                </a>
                <a href="https://x.com" class="social-link" title="X (formerly Twitter)" target="_blank" rel="noopener noreferrer">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                </a>
                <a href="https://linkedin.com" class="social-link" title="LinkedIn" target="_blank" rel="noopener noreferrer">
                    <i class="bi bi-linkedin"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Development Info (only in development) -->
    @if (IsDevelopment)
    {
        <div class="dev-info">
            <div class="dev-banner">
                <i class="bi bi-code-slash me-2"></i>
                <span>Development Mode</span>
                <span class="dev-separator">•</span>
                <span>Hot Reload Enabled</span>
                <span class="dev-separator">•</span>
                <span>Environment: @EnvironmentName</span>
            </div>
        </div>
    }
</footer>

@code {
    [Inject] private IConfiguration Configuration { get; set; } = default!;
    [Inject] private IWebHostEnvironment Environment { get; set; } = default!;
    [Inject] private ILogger<Footer> Logger { get; set; } = default!;

    private bool IsDevelopment => Environment.IsDevelopment();
    private string EnvironmentName => Environment.EnvironmentName;
    
    // Automatically get current year
    private int CurrentYear => DateTime.Now.Year;
    
    // Build date formatted
    private string BuildDate => DateTime.Now.ToString("yyyy.MM.dd");

    // Status simulation - in a real app, these would check actual services
    private string GetDatabaseStatusText() => "Connected";
    private string GetApiStatusText() => "Healthy";
    private string GetCacheStatusText() => "Active";

    private string GetDatabaseStatusClass() => "status-success";
    private string GetApiStatusClass() => "status-success";
    private string GetCacheStatusClass() => "status-success";

    private string GetDatabaseStatusIcon() => "bi-database-check";
    private string GetApiStatusIcon() => "bi-check-circle";
    private string GetCacheStatusIcon() => "bi-lightning-charge";
}

<style>
    .footer {
        background: var(--footer-bg, #f8f9fa);
        border-top: 1px solid var(--border-color, #e5e7eb);
        padding: 1rem 0;
        margin-top: auto;
    }

    .footer-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .footer-left {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .footer-center {
        display: flex;
        align-items: center;
    }

    .footer-right {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .copyright {
        font-size: 0.875rem;
        color: var(--text-muted, #6b7280);
    }

    .version-info {
        font-size: 0.75rem;
        color: var(--text-muted, #6b7280);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .version-label {
        font-weight: 500;
    }

    .version-number {
        font-weight: 600;
        color: var(--primary-color, #3b82f6);
    }

    .build-info {
        color: var(--text-muted, #9ca3af);
    }

    /* Status Indicators */
    .status-indicators {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .status-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
    }

    .status-icon {
        font-size: 1rem;
    }

    .status-text {
        color: var(--text-muted, #6b7280);
        font-weight: 500;
    }

    .status-badge {
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.025em;
    }

    .status-success {
        color: #059669;
        background: #ecfdf5;
    }

    .status-success .status-icon {
        color: #059669;
    }

    .status-warning {
        color: #d97706;
        background: #fffbeb;
    }

    .status-warning .status-icon {
        color: #d97706;
    }

    .status-error {
        color: #dc2626;
        background: #fef2f2;
    }

    .status-error .status-icon {
        color: #dc2626;
    }

    /* Quick Links */
    .quick-links {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .quick-link {
        display: flex;
        align-items: center;
        color: var(--text-muted, #6b7280);
        text-decoration: none;
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
        border-radius: 0.375rem;
        transition: all 0.2s ease;
    }

    .quick-link:hover {
        color: var(--primary-color, #3b82f6);
        background-color: var(--hover-bg, #f3f4f6);
    }

    /* Social Links */
    .social-links {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        color: var(--text-muted, #6b7280);
        text-decoration: none;
        border-radius: 50%;
        transition: all 0.2s ease;
    }

    .social-link:hover {
        color: var(--primary-color, #3b82f6);
        background-color: var(--hover-bg, #f3f4f6);
    }

    .social-link svg {
        width: 16px;
        height: 16px;
    }

    /* Development Banner */
    .dev-info {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 0.5rem 0;
        margin-top: 1rem;
    }

    .dev-banner {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        color: white;
        font-size: 0.875rem;
        font-weight: 500;
        flex-wrap: wrap;
    }

    .dev-separator {
        color: rgba(255, 255, 255, 0.5);
    }

    /* Responsive Design */
    @@media (max-width: 992px) {
        .footer-content {
            flex-direction: column;
            align-items: flex-start;
            gap: 1.5rem;
        }

        .footer-center,
        .footer-right {
            width: 100%;
        }

        .status-indicators {
            justify-content: flex-start;
        }

        .footer-right {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
    }

    @@media (max-width: 768px) {
        .status-indicators {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .quick-links {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
    }
</style>