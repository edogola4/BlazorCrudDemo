@code {
    private bool isInitialized = false;
    private bool isDisposed = false;
    private bool showUserMenu = false;
    private int pendingUpdates = 3; // Example count, replace with real data
    [Parameter] public ApplicationUserDto? User { get; set; }
    private ApplicationUserDto? currentUser;

    [Parameter] public bool IsCollapsed { get; set; }
    [Parameter] public bool IsMobile { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (isDisposed) return;
        
        try
        {
            currentUser = User;
            await InitializeAsync();
            
            // Check for updates or notifications
            await CheckForUpdates();
            
            isInitialized = true;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initializing NavMenu");
            isInitialized = true; // Still set to true to render the error state
        }
    }
    
    private async Task CheckForUpdates()
    {
        try
        {
            await InvokeAsync(async () =>
            {
                currentUser = await AuthenticationService.GetCurrentUserAsync();
                StateHasChanged();
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking for updates");
        }
    }

    private async void OnAuthenticationStateChanged(Task<ApplicationUserDto> userTask)
    {
        try
        {
            currentUser = await userTask;
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error handling authentication state change");
        }
    }

    public void Dispose()
    {
        if (!isDisposed)
        {
            isDisposed = true;
            AuthenticationService.AuthenticationStateChanged -= OnAuthenticationStateChanged;
        }
    }
}